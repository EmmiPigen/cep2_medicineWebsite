{% extends 'base.html.twig' %} {% block content %}
<div class="user-info">
  <h1>Logget ind som:</h1>
</div>

<div class="line-separator dark"></div>

<!-- Start of the main container -->
<div class="main-container">
  <!-- Start of the turbo-frame -->
  <turbo-frame id="medStatusFrame">
    <!-- Medicine status box -->
    <div
      id="medStatusBox"
      class="med-status-box"
      data-medicine-status="{{ lastLog.tagetStatus }}">
      <header class="med-status-header">
        <h1>Seneste medicin status</h1>
        <div class="line-separator darker"></div>
      </header>

      <main class="main-status-content">
        <!-- Medicine status Name -->
        <section class="med-name">
          <h3>{{ lastLog.medikamentNavn }}</h3>
        </section>

        <!-- Medicine status details -->
        <section class="med-status-details">
          <div class="med-status-labels">
            <h2>Medicin taget kl:</h2>
            <h2>Medicin taget i:</h2>
          </div>
          <div class="med-status-values">
            <h2>{{ lastLog.tagetTid }}</h2>
            <h2>{{ lastLog.tagetLokale }}</h2>
          </div>
        </section>
      </main>
    </div>
    <!-- End of the medicine status box -->
  </turbo-frame>

  <!-- Next medicine box -->
  <section id="nextMedBox" class="next-med-box">
    <header class="next-med-header">
      <h2>Næste medicin som skal tages</h2>
    </header>

    <div id="nextMedInfo" class="next-med-info">
      <!-- Headers -->
      <div class="next-med-row next-med-header-row">
        <h2>Medikament</h2>
        <h2>Skal tages:</h2>
        <h2>Skal senest tages:</h2>
        <h2>Prioritet</h2>
      </div>
      <div class="line-separator darker"></div>
      <!-- First medicine row -->
      <div class="next-med-row">
        <div class="next-med-cell"><h2>Paracetamol</h2></div>
        <div class="next-med-cell"><h2>Kl: 12:00</h2></div>
        <div class="next-med-cell"><h2>Kl 12:15</h2></div>
        <div class="next-med-cell high-priority"><h2>HØJ</h2></div>
      </div>

      <!-- Second medicine row -->
      <div class="next-med-row">
        <div class="next-med-cell"><h2>Ibuprofen</h2></div>
        <div class="next-med-cell"><h2>Kl: 18:00</h2></div>
        <div class="next-med-cell"><h2>Kl 18:15</h2></div>
        <div class="next-med-cell low-priority"><h2>LAV</h2></div>
      </div>
    </div>
  </section>
</div>
<!-- End of main container -->
{% endblock %}
