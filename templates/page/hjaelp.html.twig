{% extends 'base.html.twig' %} {% block content %}

<head>
  <link rel="stylesheet" href="{{ asset('styles/hjaelp.css') }}">
</head>

<div
  class="lineSeparator"
  style="background-color: rgb(77, 70, 63); width: 100%"></div>

<div class="main-container">

  <main id="helpBox" class="help-box1">
  <h1 class="help-title1"> {{ 'help.title'| trans }}</h1>
  <p class="help-description1">{{ 'help.description1' | trans }}</p>

  {% for help in helps %}
    <div class="help-box">
      <h3 class="help-title">
        <span class="toggle-icon">+</span> <!-- Plus-ikon -->
        {{ help.help }}
      </h3>
      <p class="help-description" style="display:none;">
        {{ help.description }}
      </p>
    </div>
  {% endfor %}
</main>

</div>

{% endblock %}
