<!DOCTYPE html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}ForglemMigEj{% endblock %}</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="{{ asset('Images/favicon.ico') }}" />

    {% block javascripts %} {% block importmap %}
    {{
      importmap('app')
    }}

    {% endblock %} {% endblock %}
  </head>

  <body>
    <div class="layout-wrapper">
      <aside class="sidebar-menu" aria-label="Hovedmenu">
        <header>
          <div class="logo-container">
            <img
              src="{{ asset('Images/favicon.ico') }}"
              alt="ForglemMigEj logo" />
            <h2>ForglemMigEj</h2>
          </div>
        </header>

        <nav class="navigation" role="navigation">
          <ul class="navigation-list">
            <li class="navigation-item">
              <a
                href="{{ path('home') }}"
                class="navigation-link"
                data-page="home">
                <span class="navigation-text">&gt; Forside</span>
              </a>
            </li>
            <li class="navigation-item">
              <a
                href="{{ path('medicin') }}"
                class="navigation-link"
                data-page="medicin">
                <span class="navigation-text">&gt; Medicin</span>
              </a>
            </li>
            <li class="navigation-item">
              <a
                href="{{ path('historik') }}"
                class="navigation-link"
                data-page="historik">
                <span class="navigation-text">&gt; Historik</span>
              </a>
            </li>
            <li class="navigation-item">
              <a
                href="{{ path('udstyr') }}"
                class="navigation-link"
                data-page="udstyr">
                <span class="navigation-text">&gt; Udstyr</span>
              </a>
            </li>
            <li class="navigation-item">
              <a
                href="{{ path('profil') }}"
                class="navigation-link"
                data-page="profil">
                <span class="navigation-text">&gt; Profil</span>
              </a>
            </li>
            <li class="navigation-item">
              <a
                href="{{ path('hjaelp') }}"
                class="navigation-link"
                data-page="hjaelp">
                <span class="navigation-text">&gt; Hj√¶lp</span>
              </a>
            </li>
            {% if app.user %}
            <li class="navigation-item">
              <a href="{{ path('logout') }}" class="navigation-link">
                <span class="navigation-text">&gt; Log ud</span>
              </a>
            </li>
            {% else %}
            <li class="navigation-item">
              <a
                href="{{ path('login') }}"
                class="navigation-link"
                data-page="login">
                <span class="navigation-text">&gt; Log ind</span>
              </a>
            </li>
            {% endif %}
          </ul>
        </nav>
      </aside>

      <div class="main-content-background"></div>
      <main class="main-content" id="content">
        {% if app.request.attributes.get('_route') != 'login' 
        and app.request.attributes.get('_route') != 'register' %}
        <section class="user-info-section">
          <header class="user-info-header">
            <h1 class="user-info-title">Logget ind som:</h1>
            <h1 class="user-info-name">{{ app.user.fuldeNavn }}</h1>
          </header>
          <div class="divider dark"></div>
        </section>
        {% endif %} {% block content %}{% endblock %}
      </main>
    </div>
  </body>
</html>
