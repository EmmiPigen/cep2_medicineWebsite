{% extends 'base.html.twig' %} {% block content %}
<div class="main-container reset-password">
  {% for flash_error in app.flashes('reset_password_error') %}
  <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
  {% endfor %}
  <main class="reset-password-container">
  
    <header class="reset-header">
      <h1>{{ "reset_password.title" | trans }}</h1>
    </header>
    <div class="divider dark"></div>

    <div class="reset-text-container">
      <p>
        {{ "reset_password.description1" | trans }}
      </p>
      <p>
        {{ "reset_password.description2" | trans }}
      </p>
    </div>
    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}

    <button class="reset-password-button">
      {{ "reset_password.send_button" | trans }}
    </button>
    {{ form_end(requestForm) }}
  </main>
</div>
{% endblock %}
